<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_radial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@android:color/transparent"
    android:screenOrientation="landscape"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="edu.unc.miller.comp580proto.RadialActivity">

    <EditText
        android:id="@+id/radial_text_field"
        android:layout_width="match_parent"
        android:layout_height="@dimen/editable_text_box_height"
        android:focusable="false"/>
    <!--Button width and height is 2/3 that of the ones in the Java file-->
    <Button
        android:id="@+id/selectbutton"
        android:layout_width="94dp"
        android:layout_height="84dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#FFF"
        android:textColor="#000"
        android:text="Select"
        android:clickable="false"
        />

        <Button
            android:id="@+id/exterior_button_0"
            android:layout_width="@dimen/exterior_buttons_width"
            android:layout_height="@dimen/exterior_buttons_height"
            android:layout_marginTop="@dimen/editable_text_box_height"
            android:text="Function #1"
            android:textSize="@dimen/exterior_buttons_text_size"
            android:textColor="#000"
            android:clickable="false"
            android:background="#FFF"
            />

        <Button
            android:id="@+id/exterior_button_1"
            android:layout_width="@dimen/exterior_buttons_width"
            android:layout_height="@dimen/exterior_buttons_height"
            android:layout_marginTop="@dimen/editable_text_box_height"
            android:text="Function #2"
            android:textSize="@dimen/exterior_buttons_text_size"
            android:textColor="#000"
            android:layout_alignParentEnd="true"
            android:clickable="false"
            android:background="#FFF"
            />

        <Button
            android:id="@+id/exterior_button_2"
            android:layout_width="@dimen/exterior_buttons_width"
            android:layout_height="@dimen/exterior_buttons_height"
            android:text="Function #3"
            android:textSize="@dimen/exterior_buttons_text_size"
            android:textColor="#000"
            android:layout_alignParentBottom="true"
            android:clickable="false"
            android:background="#FFF"/>

    <Button
        android:id="@+id/exterior_button_3"
        android:layout_width="@dimen/exterior_buttons_width"
        android:layout_height="@dimen/exterior_buttons_height"
        android:text="Function #4"
        android:textSize="@dimen/exterior_buttons_text_size"
        android:textColor="#000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:clickable="false"
        android:background="#FFF"/>
