<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_instruciton"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/exit_instruction"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:contentDescription="@string/return_user_to_keyboard"
        android:text="@string/back"
        android:textSize="36sp"
        android:textStyle="bold" /><![CDATA[@string
            android:text="Button" />

        ]]>
    <ScrollView
    android:id="@+id/scroll_instructions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/exit_instruction">
        <RelativeLayout
            android:id="@+id/instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!---how to make a sentence-->

            <TextView
                android:id="@+id/title_how_to_make_a_sentence"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="50dp"
                android:autoLink="web"
                android:linksClickable="true"
                android:textColorLink="@color/colorPrimary"
                android:fontFamily="sans-serif"
                android:textColor="@android:color/black"
                android:text="@string/how_to_make_a_sentence"
                android:textAlignment="center"
                android:textSize="36sp"
                android:textStyle="bold"
                android:typeface="normal" />

            <TextView
                android:id="@+id/textView_how_to_make_a_sentence"
                android:layout_width="600dp"
                android:layout_height="550dp"
                android:layout_alignEnd="@+id/how_to_make_a_sentence"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/title_how_to_make_a_sentence"
                android:layout_margin="25dp"
                android:paddingTop="20dp"
                android:lineSpacingExtra="18sp"
                android:text="@string/HTMS"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/how_to_make_a_sentence"
                android:layout_width="600dp"
                android:layout_height="400dp"
                android:layout_margin="25dp"
                android:layout_gravity="end"
                android:layout_below="@+id/title_how_to_make_a_sentence"
                android:contentDescription="@string/how_to_make_a_sentence"
                app:srcCompat="@drawable/how_to_make_a_sentence"
                />





            <!---how to change regions-->
            <TextView
                android:id="@+id/title_how_to_change_regions"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_below="@id/how_to_make_a_sentence"
                android:autoLink="web"
                android:fontFamily="sans-serif"
                android:linksClickable="true"
                android:text="@string/how_to_change_regions"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textColorLink="@color/colorPrimary"
                android:textSize="36sp"
                android:textStyle="bold"
                android:typeface="normal"
                />

            <ImageView
                android:id="@+id/how_to_change_regions"
                android:layout_width="600dp"
                android:layout_height="400dp"
                android:layout_margin="25dp"
                android:layout_gravity="end"
                android:layout_below="@id/title_how_to_change_regions"
                android:contentDescription="@string/how_to_make_a_sentence"
                app:srcCompat="@drawable/changing_zones"
                />

            <TextView
                android:id="@+id/textView_how_to_change_regions"
                android:layout_width="600dp"
                android:layout_height="400dp"
                android:layout_margin="25dp"
                android:layout_below="@+id/title_how_to_change_regions"
                android:layout_alignParentEnd="true"
                android:layout_alignEnd="@+id/how_to_change_regions"
                android:paddingTop="20dp"
                android:lineSpacingExtra="18sp"
                android:text="@string/HTCR"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="24sp"
                />


            <!---how to exit a region-->
            <TextView
                android:id="@+id/title_how_to_exit_a_region"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_below="@id/how_to_change_regions"
                android:autoLink="web"
                android:fontFamily="sans-serif"
                android:linksClickable="true"
                android:text="@string/how_to_exit_a_region"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textColorLink="@color/colorPrimary"
                android:textSize="36sp"
                android:textStyle="bold"
                android:typeface="normal"
                />


            <ImageView
                android:id="@+id/how_to_exit_a_region"
                android:layout_width="600dp"
                android:layout_height="400dp"
                android:layout_margin="25dp"
                android:layout_gravity="end"
                android:layout_below="@id/title_how_to_exit_a_region"
                android:contentDescription="@string/how_to_change_regions"
                app:srcCompat="@drawable/how_to_exit"
                />

            <TextView
                android:id="@+id/textView_how_to_exit_a_region"
                android:layout_width="600dp"
                android:layout_height="400dp"
                android:layout_margin="25dp"
                android:layout_below="@+id/title_how_to_exit_a_region"
                android:layout_alignParentEnd="true"
                android:layout_alignEnd="@+id/how_to_change_regions"
                android:paddingTop="20dp"
                android:lineSpacingExtra="18sp"
                android:text="@string/HTER"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="24sp"/>

            <!---how to edit a sentence-->

            <TextView
                android:id="@+id/title_how_to_edit_a_sentence"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:autoLink="web"
                android:fontFamily="sans-serif"
                android:linksClickable="true"
                android:text="@string/how_to_edit_a_sentence"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textColorLink="@color/colorPrimary"
                android:textSize="36sp"
                android:textStyle="bold"
                android:typeface="normal"
                android:layout_below="@+id/how_to_exit_a_region"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:id="@+id/how_to_edit_a_sentence"
                android:layout_width="600dp"
                android:layout_height="400dp"
                android:layout_margin="25dp"
                android:layout_gravity="end"
                android:layout_below="@id/title_how_to_edit_a_sentence"
                android:contentDescription="@string/how_to_change_regions"
                app:srcCompat="@drawable/how_to_edit"/>

            <TextView
                android:id="@+id/textView_how_to_edit_a_sentence"
                android:layout_width="600dp"
                android:layout_height="400dp"
                android:layout_margin="25dp"
                android:layout_below="@+id/title_how_to_edit_a_sentence"
                android:layout_alignParentEnd="true"
                android:layout_alignEnd="@+id/how_to_change_regions"
                android:paddingTop="20dp"
                android:lineSpacingExtra="18sp"
                android:text="@string/HTES"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="24sp"
                />

            <!---how to submit a sentence-->
            <TextView
                android:id="@+id/title_how_to_submit_a_sentence"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_below="@id/how_to_edit_a_sentence"
                android:autoLink="web"
                android:fontFamily="sans-serif"
                android:linksClickable="true"
                android:text="@string/how_to_submit_a_sentence"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textColorLink="@color/colorPrimary"
                android:textSize="36sp"
                android:textStyle="bold"
                android:typeface="normal"
                />

            <ImageView
                android:id="@+id/how_to_submit_a_sentence"
                android:layout_width="600dp"
                android:layout_height="400dp"
                android:layout_margin="25dp"
                android:layout_gravity="end"
                android:layout_below="@id/title_how_to_submit_a_sentence"
                android:contentDescription="@string/how_to_change_regions"
                app:srcCompat="@drawable/how_to_submit_a_sentence"
                />

            <TextView
                android:id="@+id/textView_how_to_submit_a_sentence"
                android:layout_width="600dp"
                android:layout_height="400dp"
                android:layout_margin="25dp"
                android:layout_below="@+id/title_how_to_submit_a_sentence"
                android:layout_alignParentEnd="true"
                android:layout_alignEnd="@+id/how_to_change_regions"
                android:paddingTop="20dp"
                android:lineSpacingExtra="18sp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="24sp"
                android:text="@string/HTSS" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
