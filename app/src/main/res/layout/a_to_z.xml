<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.unc.miller.comp580proto.MainActivity">
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/a_to_h_button"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/main_activity_button_text_size"
            android:text="@string/a_to_h_text"
            android:onClick="aToZButtonClicked"/>
        <Button
            android:id="@+id/i_to_p_button"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/main_activity_button_text_size"
            android:text="@string/i_to_p_text"
            android:onClick="aToZButtonClicked"/>
    </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/q_to_x_button"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/main_activity_button_text_size"
            android:text="@string/q_to_x_text"
            android:onClick="aToZButtonClicked"/>
        <Button
            android:id="@+id/y_to_z_button"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/main_activity_button_text_size"
            android:text="@string/y_to_z_text"
            android:onClick="aToZButtonClicked"/>
    </LinearLayout>
</LinearLayout>